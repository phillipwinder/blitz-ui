{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-button-group-17","type":"registry:block","title":"Button group with comprehensive action menu","description":"Button group with comprehensive action menu","dependencies":[],"registryDependencies":["button","button-group","dropdown-menu"],"files":[{"path":"p-button-group-17.tsx","type":"registry:block","content":"import { Button } from \"@/components/ui/button\"\nimport { ButtonGroup } from \"@/components/ui/button-group\"\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuGroup,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuTrigger,\n} from \"@/components/ui/dropdown-menu\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nexport function Pattern() {\n  return (\n    <ButtonGroup>\n      <Button variant=\"outline\">\n        <IconPlaceholder\n          lucide=\"MessageCircleIcon\"\n          tabler=\"IconMessageCircle\"\n          hugeicons=\"Message02Icon\"\n          phosphor=\"ChatCircleIcon\"\n          remixicon=\"RiChat3Line\"\n          aria-hidden=\"true\"\n        />\n        <span>Conversation</span>\n      </Button>\n      <DropdownMenu>\n        <DropdownMenuTrigger render={<Button variant=\"outline\" size=\"icon\" />}>\n          <IconPlaceholder\n            lucide=\"EllipsisVerticalIcon\"\n            tabler=\"IconDotsVertical\"\n            hugeicons=\"MoreVerticalIcon\"\n            phosphor=\"DotsThreeVerticalIcon\"\n            remixicon=\"RiMore2Fill\"\n            aria-hidden=\"true\"\n          />\n        </DropdownMenuTrigger>\n        <DropdownMenuContent align=\"end\" className=\"w-56\">\n          <DropdownMenuGroup>\n            <DropdownMenuItem>\n              <IconPlaceholder\n                lucide=\"VolumeXIcon\"\n                tabler=\"IconVolume3\"\n                hugeicons=\"VolumeMute02Icon\"\n                phosphor=\"SpeakerSimpleXIcon\"\n                remixicon=\"RiVolumeMuteLine\"\n     