{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-chart-15","type":"registry:block","title":"Step area chart with dotted pattern fill","description":"Step area chart with dotted pattern fill","dependencies":["recharts"],"registryDependencies":["https://reui.io/r/styles/radix-mira/badge.json","card","chart"],"files":[{"path":"p-chart-15.tsx","type":"registry:block","content":"\"use client\"\n\nimport { CSSProperties } from \"react\"\nimport { Badge } from \"@/components/reui/badge\"\nimport { Area, AreaChart, CartesianGrid, XAxis } from \"recharts\"\n\nimport {\n  Card,\n  CardContent,\n  CardDescription,\n  CardHeader,\n  CardTitle,\n} from \"@/components/ui/card\"\nimport {\n  ChartContainer,\n  ChartTooltip,\n  ChartTooltipContent,\n  type ChartConfig,\n} from \"@/components/ui/chart\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nconst chartData = [\n  { month: \"January\", connections: 48 },\n  { month: \"February\", connections: 62 },\n  { month: \"March\", connections: 62 },\n  { month: \"April\", connections: 85 },\n  { month: \"May\", connections: 85 },\n  { month: \"June\", connections: 110 },\n  { month: \"July\", connections: 110 },\n  { month: \"August\", connections: 135 },\n]\n\nconst chartConfig = {\n  connections: {\n    label: \"Connections\",\n    color: \"var(--chart-2)\",\n  },\n} satisfies ChartConfig\n\nexport function Pattern() {\n  return (\n    <Card className=\"w-full max-w-md\">\n      <CardHeader>\n        <CardTitle>\n          Active Connections\n          <Badge variant=\"success-light\" className=\"ml-2\">\n            <IconPlaceholder\n              lucide=\"TrendingUpIcon\"\n              tabler=\"IconTrendingUp\"\n              hugeicons=\"TradeUpIcon\"\n              phosphor=\"TrendUpIcon\"\n              remixicon=\"RiArrowRightUpLongLine\"\n              aria-hidden=\"true\"\n            />\n            +257%\n          </Badge>\n        </CardTitle>\n        <CardDescription>Server connection pool over time</CardDescription>\n      </CardHeader>\n      <CardContent>\n        <ChartContainer config={chartConfig}>\n          <AreaChart\n            accessibilityLayer\n            data={chartData}\n            margin={{ top: 20, right: 2, bottom: 0, left: 2 }}\n          >\n            <defs>\n              <pattern\n                id=\"chart15-dot-pattern\"\n                patternUnits=\"userSpaceOnUse\"\n                width=\"5\"\n                height=\"5\"\n              >\n                <rect\n                  width=\"5\"\n                  height=\"5\"\n                  fill=\"var(--color-connections)\"\n                  opacity=\"0.08\"\n                />\n                <circle\n                  cx=\"2.5\"\n                  cy=\"2.5\"\n                  r=\"1\"\n                  fill=\"var(--color-connections)\"\n                  opacity=\"0.5\"\n                />\n              </pattern>\n              <linearGradient\n                id=\"chart15-stroke-grad\"\n                x1=\"0\"\n                y1=\"0\"\n                x2=\"1\"\n                y2=\"0\"\n              >\n                <stop\n                  offset=\"0%\"\n                  stopColor=\"var(--color-connections)\"\n                  stopOpacity={0.4}\n                />\n                <stop\n                  offset=\"100%\"\n                  stopColor=\"var(--color-connections)\"\n                  stopOpacity={1}\n                />\n              </linearGradient>\n            </defs>\n            <CartesianGrid vertical={false} strokeDasharray=\"3 3\" />\n            <XAxis\n              dataKey=\"month\"\n              tickLine={false}\n              axisLine={false}\n              tickMargin={8}\n              tickFormatter={(value) => value.slice(0, 3)}\n            />\n            <ChartTooltip\n              cursor={false}\n              content={\n                <ChartTooltipContent\n                  indicator=\"dot\"\n                  className=\"min-w-40 gap-2.5\"\n                  labelFormatter={(value) => (\n                    <div className=\"border-border/50 mb-0.5 border-b pb-2\">\n                      <span className=\"text-xs font-medium\">{value} 2024</span>\n                    </div>\n                  )}\n                  formatter={(value, name) => (\n                    <div className=\"flex w-full items-center justify-between gap-2\">\n                      <div className=\"flex items-center gap-1.5\">\n                        <div\n                          className=\"h-2.5 w-2.5 shrink-0 rounded-xs bg-(--color-bg)\"\n                          style={\n                            {\n                              \"--color-bg\": `var(--color-${name})`,\n                            } as CSSProperties\n                          }\n                        />\n                        <span className=\"text-muted-foreground\">\n                          {chartConfig[name as keyof typeof chartConfig]\n                            ?.label || name}\n                        </span>\n                      </div>\n                      <span className=\"text-foreground font-semibold tabular-nums\">\n                        {Number(value).toLocaleString()}\n                      </span>\n                    </div>\n                  )}\n                />\n              }\n            />\n            <Area\n              dataKey=\"connections\"\n              type=\"stepAfter\"\n              fill=\"url(#chart15-dot-pattern)\"\n              stroke=\"var(--color-connections)\"\n              strokeWidth={2}\n            />\n          </AreaChart>\n        </ChartContainer>\n      </CardContent>\n    </Card>\n  )\n}","target":"components/patterns/p-chart-15.tsx"}]}