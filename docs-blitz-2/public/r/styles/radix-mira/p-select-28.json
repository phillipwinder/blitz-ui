{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-select-28","type":"registry:block","title":"Timezone select with UTC offsets","description":"Timezone select with UTC offsets","dependencies":[],"registryDependencies":["field","select"],"files":[{"path":"p-select-28.tsx","type":"registry:block","content":"import { Field } from \"@/components/ui/field\"\nimport {\n  Select,\n  SelectContent,\n  SelectGroup,\n  SelectItem,\n  SelectLabel,\n  SelectSeparator,\n  SelectTrigger,\n  SelectValue,\n} from \"@/components/ui/select\"\n\nconst americas = [\n  { value: \"est\", label: \"EST\", offset: \"UTC-5\" },\n  { value: \"cst\", label: \"CST\", offset: \"UTC-6\" },\n  { value: \"pst\", label: \"PST\", offset: \"UTC-8\" },\n]\n\nconst europe = [\n  { value: \"gmt\", label: \"GMT\", offset: \"UTC+0\" },\n  { value: \"cet\", label: \"CET\", offset: \"UTC+1\" },\n]\n\nconst asia = [\n  { value: \"ist\", label: \"IST\", offset: \"UTC+5:30\" },\n  { value: \"jst\", label: \"JST\", offset: \"UTC+9\" },\n]\n\nconst allItems = [\n  { label: \"Select a timezone\", value: null },\n  ...americas.map((tz) => ({\n    label: `${tz.label} (${tz.offset})`,\n    value: tz.value,\n  })),\n  ...europe.map((tz) => ({\n    label: `${tz.label} (${tz.offset})`,\n    value: tz.value,\n  })),\n  ...asia.map((tz) => ({\n    label: `${tz.label} (${tz.offset})`,\n    value: tz.value,\n  })),\n]\n\nexport function Pattern() {\n  return (\n    <Field className=\"max-w-xs\">\n      <Select>\n        <SelectTrigger>\n          <SelectValue placeholder=\"Select a timezone\" />\n        </SelectTrigger>\n        <SelectContent position=\"popper\">\n          <SelectGroup>\n            <SelectLabel>Americas</SelectLabel>\n            {americas.map((tz) => (\n              <SelectItem key={tz.value} value={tz.value}>\n                <span className=\"flex items-center justify-between gap-3\">\n                  <span>{tz.label}</span>\n                  <span className=\"text-muted-foreground text-xs\">\n                    {tz.offset}\n                  </span>\n                </span>\n              </SelectItem>\n            ))}\n          </SelectGroup>\n          <SelectSeparator />\n          <SelectGroup>\n            <SelectLabel>Europe</SelectLabel>\n            {europe.map((tz) => (\n              <SelectItem key={tz.value} value={tz.value}>\n                <span className=\"flex items-center justify-between gap-3\">\n                  <span>{tz.label}</span>\n                  <span className=\"text-muted-foreground text-xs\">\n                    {tz.offset}\n                  </span>\n                </span>\n              </SelectItem>\n            ))}\n          </SelectGroup>\n          <SelectSeparator />\n          <SelectGroup>\n            <SelectLabel>Asia</SelectLabel>\n            {asia.map((tz) => (\n              <SelectItem key={tz.value} value={tz.value}>\n                <span className=\"flex items-center justify-between gap-3\">\n                  <span>{tz.label}</span>\n                  <span className=\"text-muted-foreground text-xs\">\n                    {tz.offset}\n                  </span>\n                </span>\n              </SelectItem>\n            ))}\n          </SelectGroup>\n        </SelectContent>\n      </Select>\n    </Field>\n  )\n}","target":"components/patterns/p-select-28.tsx"}]}