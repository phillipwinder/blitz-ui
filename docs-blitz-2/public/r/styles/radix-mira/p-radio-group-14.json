{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-radio-group-14","type":"registry:block","title":"Radio group with tooltip info","description":"Radio group with tooltip info","dependencies":[],"registryDependencies":["field","radio-group","tooltip"],"files":[{"path":"p-radio-group-14.tsx","type":"registry:block","content":"import { Field, FieldLabel } from \"@/components/ui/field\"\nimport {\n  RadioGroup,\n  RadioGroupItem,\n} from \"@/components/ui/radio-group\"\nimport {\n  Tooltip,\n  TooltipContent,\n  TooltipProvider,\n  TooltipTrigger,\n} from \"@/components/ui/tooltip\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nexport function Pattern() {\n  return (\n    <TooltipProvider>\n      <RadioGroup defaultValue=\"public\" className=\"w-full max-w-xs\">\n        <Field orientation=\"horizontal\">\n          <RadioGroupItem value=\"public\" id=\"vis-public\" />\n          <div className=\"flex items-center gap-1.5\">\n            <FieldLabel htmlFor=\"vis-public\">Public</FieldLabel>\n            <Tooltip>\n              <TooltipTrigger className=\"text-muted-foreground\">\n                <span>\n                  <IconPlaceholder\n                    lucide=\"HelpCircleIcon\"\n                    tabler=\"IconHelpCircle\"\n                    hugeicons=\"HelpCircleIcon\"\n                    phosphor=\"QuestionIcon\"\n                    remixicon=\"RiQuestionLine\"\n                    aria-hidden=\"true\"\n                    className=\"size-3.5\"\n                  />\n                </span>\n              </TooltipTrigger>\n              <TooltipContent side=\"right\">\n                Anyone on the internet can see this.\n              </TooltipContent>\n            </Tooltip>\n          </div>\n        </Field>\n        <Field orientation=\"horizontal\">\n          <RadioGroupItem value=\"private\" id=\"vis-private\" />\n          <div className=\"flex items-center gap-1.5\">\n            <FieldLabel htmlFor=\"vis-private\">Private</FieldLabel>\n            <Tooltip>\n              <TooltipTrigger className=\"text-muted-foreground\">\n                <IconPlaceholder\n                  lucide=\"HelpCircleIcon\"\n                  tabler=\"IconHelpCircle\"\n                  hugeicons=\"HelpCircleIcon\"\n                  phosphor=\"QuestionIcon\"\n                  remixicon=\"RiQuestionLine\"\n                  aria-hidden=\"true\"\n                  className=\"size-3.5\"\n                />\n              </TooltipTrigger>\n              <TooltipContent side=\"right\">\n                Only you and collaborators can access this.\n              </TooltipContent>\n            </Tooltip>\n          </div>\n        </Field>\n      </RadioGroup>\n    </TooltipProvider>\n  )\n}","target":"components/patterns/p-radio-group-14.tsx"}]}