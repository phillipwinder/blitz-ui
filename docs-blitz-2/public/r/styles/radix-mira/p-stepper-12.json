{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-stepper-12","type":"registry:block","title":"Stepper with segmented progress bar","description":"Stepper with segmented progress bar","dependencies":[],"registryDependencies":["button","https://reui.io/r/styles/radix-mira/stepper.json"],"files":[{"path":"p-stepper-12.tsx","type":"registry:block","content":"\"use client\"\n\nimport { useState } from \"react\"\nimport {\n  Stepper,\n  StepperContent,\n  StepperIndicator,\n  StepperItem,\n  StepperNav,\n  StepperPanel,\n  StepperTrigger,\n} from \"@/components/reui/stepper\"\n\nimport { cn } from \"@/lib/utils\"\nimport { Button } from \"@/components/ui/button\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nconst steps = [1, 2, 3, 4]\n\nexport function Pattern() {\n  const [currentStep, setCurrentStep] = useState(1)\n\n  return (\n    <div className=\"w-full max-w-md\">\n      <Stepper value={currentStep} onValueChange={setCurrentStep}>\n        <StepperNav>\n          {steps.map((step) => (\n            <StepperItem\n              key={step}\n              step={step}\n              className=\"first:rounded-s-full last:rounded-e-full flex-1 overflow-hidden transition-all duration-300\"\n            >\n              <StepperTrigger\n                className=\"w-full flex-col items-start gap-2\"\n                asChild\n              >\n                <StepperIndicator className=\"bg-border h-2 w-full rounded-none!\">\n                  <span className=\"sr-only\">{step}</span>\n                </StepperIndicator>\n              </StepperTrigger>\n            </StepperItem>\n          ))}\n        </StepperNav>\n\n        <div className=\"flex items-center justify-between gap-2.5 py-1\">\n          <Button\n            variant=\"link\"\n            onClick={() => setCurrentStep((prev) => prev - 1)}\n            className={cn(\n              \"px-0\",\n              currentStep === 1 && \"pointer-events-none opacity-0\"\n            )}\n          >\n            <IconPlaceholder\n              lucide=\"ArrowLeftIcon\"\n              tabler=\"IconArrowLeft\"\n              hugeicons=\"ArrowLeft01Icon\"\n              phosphor=\"ArrowLeftIcon\"\n              remixicon=\"RiArrowLeftLine\"\n              className=\"size-4\"\n            />\n            Back\n          </Button>\n\n          <div className=\"text-sm font-medium\">\n            <span className=\"text-foreground\">{currentStep}</span>{\" \"}\n            <span className=\"text-muted-foreground/60\">/ {steps.length}</span>\n          </div>\n        </div>\n\n        <StepperPanel className=\"py-6 text-sm\">\n          {steps.map((step) => (\n            <StepperContent\n              className=\"flex w-full items-center justify-center\"\n              key={step}\n              value={step}\n            >\n              Step {step} content\n            </StepperContent>\n          ))}\n        </StepperPanel>\n\n        <div className=\"flex items-center justify-end gap-2.5\">\n          <Button\n            variant=\"outline\"\n            onClick={() => setCurrentStep((prev) => prev + 1)}\n            disabled={currentStep === steps.length}\n          >\n            Next\n          </Button>\n        </div>\n      </Stepper>\n    </div>\n  )\n}","target":"components/patterns/p-stepper-12.tsx"}]}