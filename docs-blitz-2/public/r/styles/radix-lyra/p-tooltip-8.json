{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-tooltip-8","type":"registry:block","title":"Toolbar with tooltip actions","description":"Toolbar with tooltip actions","dependencies":[],"registryDependencies":["button","separator","tooltip"],"files":[{"path":"p-tooltip-8.tsx","type":"registry:block","content":"import { Button } from \"@/components/ui/button\"\nimport { Separator } from \"@/components/ui/separator\"\nimport {\n  Tooltip,\n  TooltipContent,\n  TooltipProvider,\n  TooltipTrigger,\n} from \"@/components/ui/tooltip\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nexport function Pattern() {\n  return (\n    <div className=\"flex items-center justify-center\">\n      <TooltipProvider>\n        <div className=\"flex items-center gap-1\">\n          <Tooltip>\n            <TooltipTrigger asChild>\n              <Button variant=\"ghost\" size=\"icon-sm\" aria-label=\"Bold\">\n                <IconPlaceholder\n                  lucide=\"BoldIcon\"\n                  tabler=\"IconBold\"\n                  hugeicons=\"TextBoldIcon\"\n                  phosphor=\"TextBIcon\"\n                  remixicon=\"RiBold\"\n                  aria-hidden=\"true\"\n                />\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Bold</TooltipContent>\n          </Tooltip>\n          <Tooltip>\n            <TooltipTrigger asChild>\n              <Button variant=\"ghost\" size=\"icon-sm\" aria-label=\"Italic\">\n                <IconPlaceholder\n                  lucide=\"ItalicIcon\"\n                  tabler=\"IconItalic\"\n                  hugeicons=\"TextItalicIcon\"\n                  phosphor=\"TextItalicIcon\"\n                  remixicon=\"RiItalic\"\n                  aria-hidden=\"true\"\n                />\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Italic</TooltipContent>\n          </Tooltip>\n          <Tooltip>\n            <TooltipTrigger asChild>\n              <Button variant=\"ghost\" size=\"icon-sm\" aria-label=\"Underline\">\n                <IconPlaceholder\n                  lucide=\"UnderlineIcon\"\n                  tabler=\"IconUnderline\"\n                  hugeicons=\"TextUnderlineIcon\"\n                  phosphor=\"TextUnderlineIcon\"\n                  remixicon=\"RiUnderline\"\n                  aria-hidden=\"true\"\n                />\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Underline</TooltipContent>\n          </Tooltip>\n          <div className=\"flex items-center\">\n            <Separator\n              orientation=\"vertical\"\n              className=\"mx-1 h-5 leading-none\"\n            />\n          </div>\n          <Tooltip>\n            <TooltipTrigger asChild>\n              <Button variant=\"ghost\" size=\"icon-sm\" aria-label=\"Image\">\n                <IconPlaceholder\n                  lucide=\"ImageIcon\"\n                  tabler=\"IconPhoto\"\n                  hugeicons=\"ImageIcon\"\n                  phosphor=\"ImageIcon\"\n                  remixicon=\"RiImageLine\"\n                  aria-hidden=\"true\"\n                />\n              </Button>\n            </TooltipTrigger>\n            <TooltipContent>Insert Image</TooltipContent>\n          </Tooltip>\n        </div>\n      </TooltipProvider>\n    </div>\n  )\n}","target":"components/patterns/p-tooltip-8.tsx"}]}