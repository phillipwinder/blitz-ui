{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-select-32","type":"registry:block","title":"Select with icon-labeled categories","description":"Select with icon-labeled categories","dependencies":[],"registryDependencies":["field","select"],"files":[{"path":"p-select-32.tsx","type":"registry:block","content":"import { Field } from \"@/components/ui/field\"\nimport {\n  Select,\n  SelectContent,\n  SelectGroup,\n  SelectItem,\n  SelectTrigger,\n  SelectValue,\n} from \"@/components/ui/select\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nconst categories = [\n  {\n    value: \"documents\",\n    label: \"Documents\",\n    icon: (\n      <IconPlaceholder\n        lucide=\"FileTextIcon\"\n        tabler=\"IconFileText\"\n        hugeicons=\"File02Icon\"\n        phosphor=\"FileTextIcon\"\n        remixicon=\"RiFileTextLine\"\n        className=\"size-4\"\n      />\n    ),\n  },\n  {\n    value: \"images\",\n    label: \"Images\",\n    icon: (\n      <IconPlaceholder\n        lucide=\"ImageIcon\"\n        tabler=\"IconPhoto\"\n        hugeicons=\"ImageIcon\"\n        phosphor=\"ImageIcon\"\n        remixicon=\"RiImageLine\"\n        className=\"size-4\"\n      />\n    ),\n  },\n  {\n    value: \"archives\",\n    label: \"Archives\",\n    icon: (\n      <IconPlaceholder\n        lucide=\"ArchiveIcon\"\n        tabler=\"IconArchive\"\n        hugeicons=\"Archive02Icon\"\n        phosphor=\"ArchiveIcon\"\n        remixicon=\"RiArchiveLine\"\n        className=\"size-4\"\n      />\n    ),\n  },\n]\n\nexport function Pattern() {\n  return (\n    <Field className=\"max-w-xs\">\n      <Select defaultValue={categories[0]} items={categories}>\n        <SelectTrigger className=\"w-[200px]\">\n          <SelectValue>\n            {(item: (typeof categories)[number]) => (\n              <span className=\"flex items-center gap-2\">\n                {item.icon}\n                <span>{item?.label}</span>\n              </span>\n            )}\n          </SelectValue>\n        </SelectTrigger>\n        <SelectContent alignItemWithTrigger={false}>\n          <SelectGroup>\n            {categories.map((category) => (\n              <SelectItem key={category.value} value={category}>\n                <span className=\"flex items-center gap-2\">\n                  {category.icon}\n                  <span>{category.label}</span>\n                </span>\n              </SelectItem>\n            ))}\n          </SelectGroup>\n        </SelectContent>\n      </Select>\n    </Field>\n  )\n}","target":"components/patterns/p-select-32.tsx"}]}