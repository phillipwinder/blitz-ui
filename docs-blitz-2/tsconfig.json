{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@blitz-ui/react": [
        "../packages/react-blitz/src"
      ],
      "@blitz-ui/react/*": [
        "../packages/react-blitz/src/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ],
      "fumadocs-mdx:collections/*": [
        ".source/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    ".next/dev/types/**/*.ts"
  ],
  "references": [
    {
      "path": "../packages/react-blitz/tsconfig.build.json"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
