{"$schema":"https://ui.shadcn.com/schema/registry-item.json","name":"p-dropdown-menu-14","type":"registry:block","title":"User profile dropdown menu with theme toggle and status selector","description":"User profile dropdown menu with theme toggle and status selector","dependencies":[],"registryDependencies":["avatar","https://reui.io/r/styles/base-maia/badge.json","button","dropdown-menu","tabs"],"files":[{"path":"p-dropdown-menu-14.tsx","type":"registry:block","content":"\"use client\"\n\nimport { useState } from \"react\"\nimport { Badge } from \"@/components/reui/badge\"\n\nimport { cn } from \"@/lib/utils\"\nimport {\n  Avatar,\n  AvatarFallback,\n  AvatarImage,\n} from \"@/components/ui/avatar\"\nimport { Button } from \"@/components/ui/button\"\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuGroup,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuSub,\n  DropdownMenuSubContent,\n  DropdownMenuSubTrigger,\n  DropdownMenuTrigger,\n} from \"@/components/ui/dropdown-menu\"\nimport { Tabs, TabsList, TabsTrigger } from \"@/components/ui/tabs\"\nimport { IconPlaceholder } from \"@/app/(create)/components/icon-placeholder\"\n\nconst statuses = [\n  { value: \"available\", label: \"Available\", color: \"bg-green-500\" },\n  { value: \"away\", label: \"Away\", color: \"bg-amber-500\" },\n  { value: \"busy\", label: \"Busy\", color: \"bg-red-500\" },\n  { value: \"offline\", label: \"Offline\", color: \"bg-gray-400\" },\n]\n\nexport function Pattern() {\n  const [status, setStatus] = useState(\"available\")\n  const [theme, setTheme] = useState(\"light\")\n\n  const activeStatus = statuses.find((s) => s.value === status) || statuses[0]\n\n  return (\n    <div className=\"flex items-center justify-center\">\n      <DropdownMenu>\n        <DropdownMenuTrigger\n          render={<Button variant=\"outline\" className=\"w-40\" />}\n        >\n          <Avatar className=\"size-4\">\n            <AvatarImage src=\"https://github.com/shadcn.png\" />\n            <AvatarFallback>CN</AvatarFallback>\n          </Avatar>\n          <span className=\"text-sm font-medium\">shadcn</span>\n\n          <IconPlaceholder\n            lucide=\"ChevronsUpDownIcon\"\n            tabler=\"IconSelector\"\n            hugeicons=\"UnfoldMoreIcon\"\n            phosphor=\"CaretUpDownIcon\"\n            remixicon=\"RiExpandUpDownLine\"\n            className=\"ml-auto opacity-60\"\n            aria-hidden=\"true\"\n          />\n        </DropdownMenuTrigger>\n        <DropdownMenuContent className=\"w-60\" align=\"start\" sideOffset={8}>\n          <div className=\"flex items-center gap-3 px-1 pt-1.5\">\n            <Avatar className=\"size-8\">\n              <AvatarImage src=\"https://github.com/shadcn.png\" />\n              <AvatarFallback>CN</AvatarFallback>\n            </Avatar>\n            <div className=\"flex flex-col\">\n              <span className=\"text-foreground text-sm font-medium\">\n                shadcn\n              </span>\n              <span className=\"text-muted-foreground text-xs\">\n                ui@shadcn.com\n              </span>\n            </div>\n          </div>\n          <div className=\"py-2.5\">\n            <Tabs value={theme} onValueChange={setTheme}>\n              <TabsList className=\"w-full\">\n                <TabsTrigger value=\"light\" className=\"h-6 flex-1\">\n                  <IconPlaceholder\n                    lucide=\"SunIcon\"\n                    tabler=\"IconSun\"\n                    hugeicons=\"Sun01Icon\"\n                    phosphor=\"SunIcon\"\n                    remixicon=\"RiSunLine\"\n                    className=\"size-4\"\n                    aria-hidden=\"true\"\n                  />\n                </TabsTrigger>\n                <TabsTrigger value=\"dark\" className=\"h-6 flex-1\">\n                  <IconPlaceholder\n                    lucide=\"MoonIcon\"\n                    tabler=\"IconMoon\"\n                    hugeicons=\"Moon02Icon\"\n                    phosphor=\"MoonIcon\"\n                    remixicon=\"RiMoonLine\"\n                    className=\"size-4\"\n                    aria-hidden=\"true\"\n                  />\n                </TabsTrigger>\n                <TabsTrigger value=\"system\" className=\"h-6 flex-1\">\n                  <IconPlaceholder\n                    lucide=\"MonitorIcon\"\n                    tabler=\"IconDeviceDesktop\"\n                    hugeicons=\"ComputerIcon\"\n                    phosphor=\"MonitorIcon\"\n                    remixicon=\"RiComputerLine\"\n                    className=\"size-4\"\n                    aria-hidden=\"true\"\n                  />\n                </TabsTrigger>\n              </TabsList>\n            </Tabs>\n          </div>\n          <DropdownMenuGroup>\n            <DropdownMenuItem\n              onSelect={(e) => e.preventDefault()}\n              className=\"justify-between\"\n            >\n              <span className=\"flex items-center gap-2\">\n                <IconPlaceholder\n                  lucide=\"BuildingIcon\"\n                  tabler=\"IconBuilding\"\n                  hugeicons=\"Building01Icon\"\n                  phosphor=\"BuildingsIcon\"\n                  remixicon=\"RiBuildingLine\"\n                  aria-hidden=\"true\"\n                />\n                Your Companies\n              </span>\n              <Badge\n                variant=\"secondary\"\n                size=\"sm\"\n                className=\"rounded-full px-1.5\"\n              >\n                12\n              </Badge>\n            </DropdownMenuItem>\n            <DropdownMenuItem\n              onSelect={(e) => e.preventDefault()}\n              className=\"justify-between\"\n            >\n              <span className=\"flex items-center gap-2\">\n                <IconPlaceholder\n                  lucide=\"PhoneIcon\"\n                  tabler=\"IconPhone\"\n                  hugeicons=\"Call02Icon\"\n                  phosphor=\"PhoneIcon\"\n                  remixicon=\"RiPhoneLine\"\n                  aria-hidden=\"true\"\n                />\n                Your Numbers\n              </span>\n              <Badge\n                variant=\"secondary\"\n                size=\"sm\"\n                className=\"rounded-full px-1.5\"\n              >\n                2\n              </Badge>\n            </DropdownMenuItem>\n          </DropdownMenuGroup>\n          <DropdownMenuSub>\n            <DropdownMenuSubTrigger>\n              <span className=\"flex items-center gap-2\">\n                <span\n                  className={cn(\"size-2 rounded-full\", activeStatus.color)}\n                />\n                {activeStatus.label}\n              </span>\n            </DropdownMenuSubTrigger>\n            <DropdownMenuSubContent className=\"w-40\">\n              {statuses.map((s) => (\n                <DropdownMenuItem\n                  key={s.value}\n                  onClick={() => setStatus(s.value)}\n                  className=\"justify-between\"\n                >\n                  <span className=\"flex items-center gap-2\">\n                    <span className={`size-2 rounded-full ${s.color}`} />\n                    {s.label}\n                  </span>\n                  {status === s.value && (\n                    <IconPlaceholder\n                      lucide=\"CheckIcon\"\n                      tabler=\"IconCheck\"\n                      hugeicons=\"Tick02Icon\"\n                      phosphor=\"CheckIcon\"\n                      remixicon=\"RiCheckLine\"\n                      className=\"text-muted-foreground size-4\"\n                      aria-hidden=\"true\"\n                    />\n                  )}\n                </DropdownMenuItem>\n              ))}\n            </DropdownMenuSubContent>\n          </DropdownMenuSub>\n          <DropdownMenuSeparator />\n          <DropdownMenuGroup>\n            <DropdownMenuItem>\n              <IconPlaceholder\n                lucide=\"SettingsIcon\"\n                tabler=\"IconSettings\"\n                hugeicons=\"SettingsIcon\"\n                phosphor=\"GearIcon\"\n                remixicon=\"RiSettings3Line\"\n                aria-hidden=\"true\"\n              />\n              Settings\n            </DropdownMenuItem>\n            <DropdownMenuItem>\n              <IconPlaceholder\n                lucide=\"LifeBuoyIcon\"\n                tabler=\"IconLifebuoy\"\n                hugeicons=\"LifebuoyIcon\"\n                phosphor=\"LifebuoyIcon\"\n                remixicon=\"RiLifebuoyLine\"\n                aria-hidden=\"true\"\n              />\n              Help Center\n            </DropdownMenuItem>\n          </DropdownMenuGroup>\n          <DropdownMenuSeparator />\n          <DropdownMenuItem variant=\"destructive\">\n            <IconPlaceholder\n              lucide=\"LogOutIcon\"\n              tabler=\"IconLogout\"\n              hugeicons=\"LogoutSquare01Icon\"\n              phosphor=\"SignOutIcon\"\n              remixicon=\"RiLogoutBoxRLine\"\n              aria-hidden=\"true\"\n            />\n            Logout\n          </DropdownMenuItem>\n        </DropdownMenuContent>\n      </DropdownMenu>\n    </div>\n  )\n}","target":"components/patterns/p-dropdown-menu-14.tsx"}]}